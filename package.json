{
  "name": "spotify-release-list",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bulma": "^0.8.0",
    "bulma-checkradio": "^1.1.1",
    "classnames": "^2.2.6",
    "date-fns": "^2.7.0",
    "lodash.orderby": "^4.6.0",
    "lodash.xor": "^4.5.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.1",
    "react-scripts": "3.3.0",
    "redux": "^4.0.4",
    "redux-persist": "^6.0.0",
    "redux-persist-webextension-storage": "^1.0.2",
    "redux-saga": "^1.1.1",
    "reselect": "^4.0.0",
    "webext-redux": "^2.1.4"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "webpack-cli": "^3.3.9"
  },
  "scripts": {
    "watch:app": "INLINE_RUNTIME_CHUNK=false react-scripts start",
    "prebuild": "rimraf build",
    "build": "npm-run-all build:*",
    "build:app": "INLINE_RUNTIME_CHUNK=false react-scripts build",
    "build:background": "webpack --mode production ./src/background.js --output ./build/background.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "browser": true,
      "webextensions": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
